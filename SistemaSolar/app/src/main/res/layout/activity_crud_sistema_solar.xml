<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cl_crud_sistema_solar"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CrudSistemaSolar">

    <EditText
        android:id="@+id/input_nombre_sistema_solar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Nombre del Sistema Solar"
        android:inputType="text"
        android:layout_margin="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/input_descripcion_sistema_solar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Descripción"
        android:inputType="text"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@id/input_nombre_sistema_solar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/input_edad_sistema_solar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Edad en millones de años"
        android:inputType="number"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@id/input_descripcion_sistema_solar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/input_tipo_estrella"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Tipo de estrella"
        android:inputType="text"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@id/input_edad_sistema_solar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Switch
        android:id="@+id/switch_habitable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¿Es habitable?"
        app:layout_constraintTop_toBottomOf="@id/input_tipo_estrella"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="16dp" />

    <Button
        android:id="@+id/btn_guardar_sistema_solar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Guardar"
        app:layout_constraintTop_toBottomOf="@id/switch_habitable"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="16dp"
        app:backgroundTint="#3F51B5"
        android:textColor="#FFFFFF"/>
</androidx.constraintlayout.widget.ConstraintLayout>
